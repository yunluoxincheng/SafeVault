<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme for Android 12+ with dynamic color support (Material You) -->
    <style name="Base.Theme.SafeVault" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Enable dynamic colors from system wallpaper (Android 12+) -->
        <item name="android:colorBackground">@android:color/system_neutral1_500</item>
        <item name="colorPrimary">@android:color/system_accent1_500</item>
        <item name="colorOnPrimary">@android:color/system_accent1_100</item>
        <item name="colorPrimaryContainer">@android:color/system_accent1_200</item>
        <item name="colorOnPrimaryContainer">@android:color/system_accent1_900</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/system_neutral1_900</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Splash Screen for Android 12+ -->
        <item name="android:windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/ic_launcher_background</item>
    </style>
</resources>
