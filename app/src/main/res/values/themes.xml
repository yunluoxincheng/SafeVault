<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material Design 3 (支持深色模式) -->
    <style name="Base.Theme.SafeVault" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <!-- Tertiary color -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <!-- Error color -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorSurfaceContainer">@color/md_theme_light_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_light_surfaceContainerHigh</item>
        <item name="colorSurfaceContainerHighest">@color/md_theme_light_surfaceContainerHighest</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- 窗口背景使用主题色 -->
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <style name="Theme.SafeVault" parent="Base.Theme.SafeVault">
        <!-- Splash Screen 配置 (跟随系统) -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenBackground">@color/splash_screen_background</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>

        <!-- 现代化形状配置 -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SafeVault.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.SafeVault.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.SafeVault.LargeComponent</item>
    </style>

    <!-- 现代化圆角形状 -->
    <style name="ShapeAppearance.SafeVault.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.SafeVault.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.SafeVault.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <!-- 无ActionBar主题（已在 Base.Theme.SafeVault 中设置） -->
    <style name="Theme.SafeVault.NoActionBar" parent="Theme.SafeVault" />

    <!-- 透明主题（用于自动填充直接填充模式） -->
    <style name="Theme.SafeVault.Transparent" parent="Theme.SafeVault.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- 圆形ImageView样式 -->
    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <!-- 优化的按钮样式 - 确保良好的对比度 -->
    <style name="Widget.Material3.Button.OutlinedButton.HighContrast" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.Material3.Button.TextButton.HighContrast" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>
</resources>
